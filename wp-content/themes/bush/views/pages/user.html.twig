{% extends 'template/main.html.twig' %}
{% block content %}
    {% if user_meta %}
      <div class="home-user-profile">
        <h1>{{user_meta.name}}</h1>
          <div class="hide" itemprop="user_meta" itemscope itemtype="http://schema.org/Person">
              <span class="hide" itemprop="name">{{ user_meta.name }}</span>
              <span class="hide" itemprop="familyName">{{ user_meta.last_name }}</span>
              <span class="hide" itemprop="givenName">{{ user_meta.first_name }}</span>
          </div>
          <div id="user_meta-profile-pic">
              {% if current_users_page %}
                  <div class="update-user-info"><a href="/update-profile/"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Update Info</a></div>
              {% endif %}
              {{ the_author_avatar(150, user_meta.id) }}
          </div>

          <div id="user_meta-bio-teaser">
              {{ user_meta.bio_teaser | raw  }}
          </div>

          <div style="display: none;" id="user_meta-bio">
              <div class="row">
                  <div class="small-12 medium-6 large-4 columns">

                      <div id="user_meta-lightbox-social">
                          {% if user_meta.website %}
                              <a href="{{ user_meta.website }}" rel="nofollow" target="_blank" class="web">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-globe fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                          {% if user_meta.google %}
                              <a href="{{ user_meta.google }}" rel="nofollow" target="_blank" class="google-plus">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-google-plus fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                          {% if user_meta.twitter %}
                              <a href="{{ user_meta.twitter }}" rel="nofollow" target="_blank" class="twitter">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-twitter fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                          {% if user_meta.facebook %}
                              <a href="{{ user_meta.facebook }}" rel="nofollow" target="_blank" class="facebook">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-facebook fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                          {% if user_meta.linkedin %}
                              <a href="{{ user_meta.linkedin }}" rel="nofollow" target="_blank" class="linkedin">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-linkedin fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                          {% if user_meta.pinterest %}
                              <a href="{{ user_meta.pinterest }}" rel="nofollow" target="_blank" class="pinterest">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-pinterest fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                          {% if user_meta.instagram %}
                              <a href="{{ user_meta.instagram }}" rel="nofollow" target="_blank" class="instagram">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-instagram fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                          {% if user_meta.youtube %}
                              <a href="{{ user_meta.youtube }}" rel="nofollow" target="_blank" class="youtube">
                                      <span class="fa-stack fa-2x">
                                          <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                          <i class="fa fa-youtube fa-stack-1x"></i>
                                      </span>
                              </a>
                          {% endif %}
                      </div>
                  </div>
                  <div class="small-12 medium-6 large-8 columns">
                      <h4>{{ user_meta.name }}</h4>
                      {{ user_meta.bio | raw  }}
                  </div>
              </div>
          </div>

          {% if user_meta.website or user_meta.google or user_meta.twitter or user_meta.facebook or user_meta.linkedin or user_meta.pinterest or user_meta.instagram %}
              <div id="user_meta-social">
                  <h4>Find me on</h4>
                  {% if user_meta.website %}
                      <a href="{{ user_meta.website }}" rel="nofollow" target="_blank" class="web">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-globe fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
                  {% if user_meta.google %}
                      <a href="{{ user_meta.google }}" rel="nofollow" target="_blank" class="google-plus">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-google-plus fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
                  {% if user_meta.twitter %}
                      <a href="{{ user_meta.twitter }}" rel="nofollow" target="_blank" class="twitter">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-twitter fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
                  {% if user_meta.facebook %}
                      <a href="{{ user_meta.facebook }}" rel="nofollow" target="_blank" class="facebook">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-facebook fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
                  {% if user_meta.linkedin %}
                      <a href="{{ user_meta.linkedin }}" rel="nofollow" target="_blank" class="linkedin">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-linkedin fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
                  {% if user_meta.pinterest %}
                      <a href="{{ user_meta.pinterest }}" rel="nofollow" target="_blank" class="pinterest">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-pinterest fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
                  {% if user_meta.instagram %}
                      <a href="{{ user_meta.instagram }}" rel="nofollow" target="_blank" class="instagram">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-instagram fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
                  {% if user_meta.youtube %}
                      <a href="{{ user_meta.youtube }}" rel="nofollow" target="_blank" class="youtube">
                              <span class="fa-stack fa-2x">
                                  <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                  <i class="fa fa-youtube fa-stack-1x"></i>
                              </span>
                      </a>
                  {% endif %}
              </div>
          {% endif %}
      </div>
    {% else %}
        <h1>Sorry, that user was not found.</h1>
    {% endif %}
{% endblock %}
