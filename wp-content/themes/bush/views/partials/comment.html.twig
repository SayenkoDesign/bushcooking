<div class="comment clearfix">
    <div class="author">
        <a href="/user?user_name={{comment.comment_author}}">
            {% if comment.user_id %}
                {{ the_author_avatar(64, comment.user_id) }}
            {% else %}
                <img alt="" src="{{ stylesheet_directory_uri }}/images/fav-icon.png"  class="avatar avatar-64 photo" width="64" height="64">
            {% endif %}
        </a>
    </div>
    <div class="details">
        <a href="/user?user_name={{comment.comment_author}}">
            <h4>{{ comment.comment_author }}</h4>
        </a>
        <div class="rating">
            {% for i in 1..5 %}
                {% if i <= rating %}
                    <i class="fa fa-star"></i>
                {% else %}
                    <i class="fa fa-star-o"></i>
                {% endif %}
            {% endfor %}
        </div>
        <div class="date">{{ comment.comment_date|date('F d, Y') }}</div>
        <div class="content">
            {{ comment.comment_content }}
        </div>
    </div>
</div>
